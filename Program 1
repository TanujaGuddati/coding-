#include<stdio.h>
#include<string.h>
in the main()
{
  char str[]="abcd";
   substrings(str,strlen(str));
  return(0)
}
void substring(char str[],in the n) 
{
  int x , i, k, j; 
   for(i=1;i<=n; i++)
   {
     for(j=0;j<=n;j++)
      {
        int x=j+1;
         for(k=j;k<x;k++)
          printf("%3c",str[k]);
           printf("\n");
       }
    }
  }

